<div class="container mb-5">
    <style>dt { text-align: right !important } dd { text-align: left !important }</style>
    <h1>Edit container info</h1>
    <% if Colin::Models::Container.where(barcode: params[:barcode]).exists?
        container = Colin::Models::Container.where(barcode: params[:barcode]).take   
    else %>
        <div class="alert alert-danger w-50" role="alert">
            Container with barcode <%= params[:barcode] %> not found.
        </div>
    <%end%>

    <a class="btn btn-light btn-lg btn-block" href="/chemical/edit/cas/<%= container.chemical.cas%>">Edit chemical info</a>

    <input hidden type="text" name="barcode" id="barcode" value="<%= params[:barcode] %>"/>

    <dl class="row mt-5">
        <dt class="col-md-2">CAS:</dt>
        <dd class="col-md-2"><input class="form-control" id="cas" name="cas" aria-describedby="cas" value="<%= container.chemical.cas%>" readonly></dd>
        <dt class="col-md-2">Name:</dt>
        <dd class="col-md-6 text-truncate"><input type="text" class="form-control" id="name" aria-describedby="name" value="<%= container.chemical.prefix.to_s + container.chemical.name %>" readonly></dd>
        <dt class="col-md-2">Barcode:</dt>
        <dd class="col-md-2"><input class="form-control" id="new_barcode" name="new_barcode" aria-describedby="new_barcode" value="<%= container.barcode %>"></dd>
        <dt class="col-md-2">Location: </dt>
        <dd class="col-md-6">
            <select class="form-control selectpicker" id="location_id" name="location_id" aria-describedby="location" data-live-search="true">
            <% Colin::Models::Location.active.can_store_chemicals.each do |location| %>
            <option <%= "selected" if container.current_location.location.id == location.id %> value="<%= location.id %>"><%= location.location_path %></option>
            <% end %>  
            </select>
        </dd>
        <hr class="w-100"/>

        <dt class="col-md-2">Supplier:</dt>
        <dd class="col-md-4"><input class="form-control" id="supplier" name="supplier" aria-describedby="supplier" value="<%=  
        container.supplier.name if !container.supplier.nil? %>"></dd>
        <dt class="col-md-2">Product number:</dt>
        <dd class="col-md-4"><input class="form-control" id="product_number" name="product_number" aria-describedby="product_number" value="<%= container.product_number if !container.product_number.nil? %>"></dd>
        <dt class="col-md-2">Lot number:</dt>
        <dd class="col-md-4"><input class="form-control" id="lot_number" name="lot_number" aria-describedby="lot_number" value="<%= container.lot_number if !container.lot_number.nil? %>"></dd>
        <dt class="col-md-2">Quantity:</dt>
        <dd class="col-md-4"><input class="form-control" id="quantity" name="quantity" aria-describedby="quantity" value="<%= 
        container.container_size.to_s + ' ' + container.size_unit if !container.container_size.nil? && !container.size_unit.nil? %>"></dd>
        <dt class="col-md-2">Owner:</dt>
        <dd class="col-md-4">
            <select class="form-control selectpicker" id="owner_id" name="owner_id" title="Owner" data-live-search="true">      
                <% Colin::Models::User.active.where(hidden: false).each do |user| %>
                <option <%= "selected" if container.owner == user %> value="<%= user.id %>"><%= user.name %></option>
                <% end %>  
            </select>
        </dd>
        <dt class="col-md-2">Last modified by:</dt>
        <dd class="col-md-4"><input class="form-control" id="user" name="user" aria-describedby="user" value="<%= container.user.name if !container.user.nil? %>" readonly></dd>
        <hr class="w-100"/>

        <dt class="col-md-2">InChI:</dt>
        <dd class="col-md-4"><input class="form-control" id="inchi" name="inchi" aria-describedby="inchi" value="<%=  
        container.chemical.inchi if !container.chemical.inchi.nil?%>" readonly></dd>
        <dt class="col-md-2">SMILES:</dt>
        <dd class="col-md-4"><input class="form-control" id="smiles" name="smiles" aria-describedby="smiles" value="<%=  
        container.chemical.smiles if !container.chemical.smiles.nil?%>" readonly></dd>
        <dt class="col-md-2">PubChem ID:</dt>
        <dd class="col-md-4"><input class="form-control" id="pubchem" name="pubchem" aria-describedby="pubchem" value="<%=  
        container.chemical.pubchem if !container.chemical.pubchem.nil?%>" readonly></dd>
        <dt class="col-md-2">Density:</dt>
        <dd class="col-md-4">
            <div class="input-group">
                <input type="text" class="form-control w-75" name="density" value="<%= container.chemical.density.to_s if !container.chemical.density.nil? %>" readonly>
                <div class="input-group-append">
                    <div class="input-group-text"> g/mL</div>
                </div>
            </div>
        </dd>
        <dt class="col-md-2">Melting point:</dt>
        <dd class="col-md-4">
            <div class="input-group">
                <input type="text" class="form-control w-75" name="melting_point" value="<%= container.chemical.melting_point.to_s if !container.chemical.melting_point.nil? %>" readonly>
                <div class="input-group-append">
                    <div class="input-group-text"> &#8451;</div>
                </div>
            </div>
        </dd>
        <dt class="col-md-2">Boiling point:</dt>
        <dd class="col-md-4">
            <div class="input-group">
                <input type="text" class="form-control w-75" name="boiling_point" value="<%= container.chemical.boiling_point.to_s if !container.chemical.boiling_point.nil? %>" readonly>
                <div class="input-group-append">
                    <div class="input-group-text"> &#8451;</div>
                </div>
            </div>
        </dd>
        <hr class="w-100"/>

        <dt class="col-md-2">Hazard statements:</dt>
        <dd class="col-md-10">
        <select class="form-control selectpicker" multiple title="H statements" id="haz_stats" name="haz_stats[]" aria-describedby="haz_stats" data-live-search="true" disabled>
            <% Colin::Models::HazStat.all.each do |hazstat| %>
                <option <%= "selected" if container.chemical.haz_stat.each.map{|h| h.id}.include? hazstat.id %> value="<%= hazstat.code %>"><%= hazstat.code + " - " + hazstat.description %></option>
            <% end %>  
        </select>
        </dd>
        <dt class="col-md-2">Precaution statements:</dt>
        <dd class="col-md-10">
        <select class="form-control selectpicker" multiple title="P statements" id="prec_stats" name="prec_stats[]" aria-describedby="prec_stats" data-live-search="true" disabled>
            <% Colin::Models::PrecStat.all.each do |precstat| %>
                <option <%= "selected" if container.chemical.prec_stat.each.map{|p| p.id}.include? precstat.id %> value="<%= precstat.code %>"><%= precstat.code + " - " + precstat.description %></option>
            <% end %>  
        </select>
        </dd>
        <dt class="col-md-2">Hazard classification:</dt>
        <dd class="col-md-10">
        <select class="form-control selectpicker" multiple title="Hazard classifications" id="haz_classes" name="haz_class_ids[]" aria-describedby="haz_classes" data-live-search="true" disabled>
            <% Colin::Models::HazClass.toplevel.each do |hazclass| %>
                <option <%= "selected" if container.chemical.haz_class.each.map{|h| h.superclass_id}.include? hazclass.id %> value="<%= hazclass.id %>"><%= hazclass.description %></option>
            <% end %>  
        </select>
        </dd>
        <dt class="col-md-2">Pictogram:</dt>
        <dd class="col-md-4">
             <select class="form-control selectpicker" multiple title="Pictogram" id="pictograms" name="pictogram_ids[]" aria-describedby="pictograms" data-live-search="true" disabled>
            <% Colin::Models::Pictogram.all.each do |pictogram| %>
                <option <%= "selected" if container.chemical.pictogram.each.map{|p| p.id}.include? pictogram.id %> value="<%= pictogram.id %>" data-content="<img class='img-thumbnail img-fluid' style='width:50px;height:50px;' src='/api/pictogram/image/id/<%= pictogram.id %>'>&nbsp;<%= pictogram.name %>"></option>
            <% end %>  
            </select>
        </dd>
        <dt class="col-md-2">Signal word:</dt>
        <dd class="col-md-4">
            <select class="form-control selectpicker" title="Signal Word" id="signal_word" name="signal_word" aria-describedby="signal_word" disabled>
            <% Colin::Models::SignalWord.all.each do |signalword| %>
                <option value="<%= signalword.name %>"><%= signalword.name %></option>
            <% end %>  
            </select>
        </dd>

        <hr class="w-100"/>

        <dt class="col-md-2">UN number:</dt>
        <dd class="col-md-2"><input class="form-control" id="un_number" name="un_number" aria-describedby="un_number" value="<%=  
        container.chemical.un_number if !container.chemical.un_number.nil?%>" readonly></dd>
        <dt class="col-md-2">UN proper shipping name:</dt>
        <dd class="col-md-6"><input class="form-control" id="un_proper_shipping_name" name="un_proper_shipping_name" aria-describedby="un_proper_shipping_name" value="<%=  
        container.chemical.un_proper_shipping_name if !container.chemical.un_proper_shipping_name.nil?%>" readonly></dd>
        <dt class="col-md-2">Transport class:</dt>
        <dd class="col-md-2"><input class="form-control" id="dg_class" name="dg_class" aria-describedby="dg_class" value="<%= 
        if !container.chemical.dg_class_1.nil? && container.chemical.dg_class_2.nil? && container.chemical.dg_class_3.nil?
        container.chemical.dg_class_1.number.to_s
        elsif !container.chemical.dg_class_1.nil? && !container.chemical.dg_class_2.nil? && container.chemical.dg_class_3.nil?
        container.chemical.dg_class_1.number.to_s + ' (' + container.chemical.dg_class_2.number.to_s + ')'
        elsif !container.chemical.dg_class_1.nil? && !container.chemical.dg_class_2.nil? && !container.chemical.dg_class_3.nil?
        container.chemical.dg_class_1.number.to_s + ' (' + container.chemical.dg_class_2.number.to_s + ', ' + container.chemical.dg_class_3.number.to_s + ')'
        end %>" readonly>
       </dd>
        <dt class="col-md-2">Packing group:</dt>
        <dd class="col-md-2"><input class="form-control" id="packing_group" name="packing_group" aria-describedby="packing_group" value="<%=  
        container.chemical.packing_group.name if !container.chemical.packing_group.nil?%>" readonly></dd>
        <dt class="col-md-2">Schedule:</dt>
        <dd class="col-md-2"><input class="form-control" id="schedule" name="schedule" aria-describedby="schedule" value="<%=  
        container.chemical.schedule.number if !container.chemical.schedule.nil?%>" readonly></dd>
    </dl>
    <button class="btn btn-primary btn-lg btn-block" id="submit">Save</button>
    <button class="btn btn-secondary btn-lg btn-block" id="cancel">Cancel</button>
    <button class="btn btn-outline-danger btn-lg btn-block mt-2" id="delete">Delete</button>
</div>
<script>
$(document).ready(function () {
  $("#submit").click(function () {
    $.ajax({
      type: "PUT",
      url: "/api/container/barcode/" + $("[name=barcode]").val(),
      data: {
        barcode: $("[name='barcode']").val(),
        new_barcode: $("[name='new_barcode']").val(),
        location_id: $("[name='location_id']").val(),
        supplier: $("[name='supplier']").val(),
        product_number: $("[name='product_number']").val(),
        lot_number: $("[name='lot_number']").val(),
        quantity: $("[name='quantity']").val(),
        owner_id: $("[name='owner_id']").val(),
        user: $("[name='user']").val()
      },
      dataType: "json",
      success: function () {window.location.href = "/";}
    });
  });
  $("#cancel").click(function () {window.location.href = "/";});
  $("#delete").click(function () {
    $.ajax({
      type: "DELETE",
      url: "/api/container/barcode/" + $("[name=barcode]").val(),
      dataType: "json",
      success: function () {window.location.href = "/";}
    });
  });
});
</script>