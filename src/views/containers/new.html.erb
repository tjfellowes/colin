<div class="container"> 
<style>dt { text-align: right !important } dd { text-align: left !important }</style>
<h1>Add chemical</h1>
    <dl class="row mt-5">
        <dt class="col-md-2">CAS:</dt>
        <dd class="col-md-2"><input class="form-control" id="cas" name="cas" aria-describedby="cas"></dd>
        <dt class="col-md-2">Name:</dt>
        <dd class="col-md-6 text-truncate">
            <div class="input-group">
                <input type="text" class="form-control w-25" id="prefix" name="prefix" aria-describedby="prefix" placeholder="Prefix">
                <input type="text" class="form-control w-75" id="name" name="name" aria-describedby="name" placeholder="Name">
            </div>
        </dd>
        <dt class="col-md-2">Barcode:</dt>
        <dd class="col-md-2"><input class="form-control" id="barcode" name="barcode" aria-describedby="barcode"></dd>
        <dt class="col-md-2">Location: </dt>
        <dd class="col-md-6">
        <select class="form-control selectpicker" id="location_id" name="location_id" aria-describedby="location" title="Location" data-live-search="true">      
            <% Colin::Models::Location.active.can_store_chemicals.each do |location| %>
            <option value="<%= location.id %>"><%= location.location_path %></option>
            <% end %>  
        </select>        
        </dd>
        <hr class="w-100"/>


        <dt class="col-md-2">Supplier:</dt>
        <dd class="col-md-4"><input class="form-control" id="supplier" name="supplier" aria-describedby="supplier"></dd>
        <dt class="col-md-2">Product number:</dt>
        <dd class="col-md-4"><input class="form-control" id="product_number" name="product_number" aria-describedby="product_number"></dd>
        <dt class="col-md-2">Lot number:</dt>
        <dd class="col-md-4"><input class="form-control" id="lot_number" name="lot_number" aria-describedby="lot_number"></dd>
        <dt class="col-md-2">Quantity:</dt>
        <dd class="col-md-4"><input class="form-control" id="quantity" name="quantity" aria-describedby="quantity"></dd>
        <dt class="col-md-2">Owner:</dt>
        <dd class="col-md-4">
            <select class="form-control selectpicker" id="owner_id" name="owner_id" title="Owner" data-live-search="true">      
                <% Colin::Models::User.active.where(hidden: false).each do |user| %>
                <option value="<%= user.id %>"><%= user.name %></option>
                <% end %>  
            </select>
        </dd>
        <dt class="col-md-2">Last modified by:</dt>
        <dd class="col-md-4"><input class="form-control" id="user" name="user" aria-describedby="user" value="<%= current_user.name%>" readonly></dd>
        <hr class="w-100"/>

        <dt class="col-md-2">InChI:</dt>
        <dd class="col-md-4"><input class="form-control" id="inchi" name="inchi" aria-describedby="inchi"></dd>
        <dt class="col-md-2">SMILES:</dt>
        <dd class="col-md-4"><input class="form-control" id="smiles" name="smiles" aria-describedby="smiles"></dd>
        <dt class="col-md-2">PubChem ID:</dt>
        <dd class="col-md-4"><input class="form-control" id="pubchem" name="pubchem" aria-describedby="pubchem"></dd>
        <dt class="col-md-2">Density:</dt>
        <dd class="col-md-4">
            <div class="input-group">
                <input type="text" class="form-control w-75" id="density" name="density">
                <div class="input-group-append">
                    <div class="input-group-text"> g/mL</div>
                </div>
            </div>
        </dd>
        <dt class="col-md-2">Melting point:</dt>
        <dd class="col-md-4">
            <div class="input-group">
                <input type="text" class="form-control w-75" id="melting_point" name="melting_point">
                <div class="input-group-append">
                    <div class="input-group-text"> &#8451;</div>
                </div>
            </div>
        </dd>
        <dt class="col-md-2">Boiling point:</dt>
        <dd class="col-md-4">
            <div class="input-group">
                <input type="text" class="form-control w-75" id="boiling_point" name="boiling_point">
                <div class="input-group-append">
                    <div class="input-group-text"> &#8451;</div>
                </div>
            </div>
        </dd>
        <hr class="w-100"/>

        <dt class="col-md-2">Hazard statements:</dt>
        <dd class="col-md-10">
        <select class="form-control selectpicker" multiple title="H statements" id="haz_stats" name="haz_stats[]" aria-describedby="haz_stats" data-live-search="true">
            <% Colin::Models::HazStat.all.each do |hazstat| %>
                <option value="<%= hazstat.code %>"><%= hazstat.code + " - " + hazstat.description %></option>
            <% end %>  
        </select>
        </dd>
        <dt class="col-md-2">Precaution statements:</dt>
        <dd class="col-md-10">
        <select class="form-control selectpicker" multiple title="P statements" id="prec_stats" name="prec_stats[]" aria-describedby="prec_stats" data-live-search="true">
            <% Colin::Models::PrecStat.all.each do |precstat| %>
                <option value="<%= precstat.code %>"><%= precstat.code + " - " + precstat.description %></option>
            <% end %>  
        </select>
        </dd>
        <dt class="col-md-2">Hazard classification:</dt>
        <dd class="col-md-10">
        <select class="form-control selectpicker mb-2" multiple title="Hazard classifications" id="haz_classes" aria-describedby="haz_classes" data-live-search="true">
            <% Colin::Models::HazClass.toplevel.each do |hazclass| %>
                <option value="<%= hazclass.id %>"><%= hazclass.description %></option>
            <% end %>  
        </select>
        <dl id="haz_class_categories" class="row mb-0" style="display:none;">            
        </dl>
        </dd>
        <dt class="col-md-2">Pictogram:</dt>
        <dd class="col-md-4">
             <select class="form-control selectpicker" multiple title="Pictogram" id="pictograms" name="pictogram_ids[]" aria-describedby="pictograms" data-live-search="true">
            <% Colin::Models::Pictogram.all.each do |pictogram| %>
                <option value="<%= pictogram.id %>" data-content="<img class='img-thumbnail img-fluid' style='width:50px;height:50px;' src='/api/pictogram/image/id/<%= pictogram.id %>'>&nbsp;<%= pictogram.name %>"></option>
            <% end %>  
            </select>
        </dd>
        <dt class="col-md-2">Signal word:</dt>
        <dd class="col-md-4">
            <select class="form-control selectpicker" title="Signal Word" id="signal_word" name="signal_word" aria-describedby="signal_word">
            <% Colin::Models::SignalWord.all.each do |signalword| %>
                <option value="<%= signalword.name %>"><%= signalword.name %></option>
            <% end %>  
            </select>
        </dd>
        
        <hr class="w-100"/>

        <dt class="col-md-2">UN number:</dt>
        <dd class="col-md-2"><input class="form-control" id="un_number" name="un_number" aria-describedby="un_number"></dd>
        <dt class="col-md-2">UN proper shipping name:</dt>
        <dd class="col-md-6"><input class="form-control" id="un_proper_shipping_name" name="un_proper_shipping_name" aria-describedby="un_proper_shipping_name"></dd>
        <dt class="col-md-2">Transport class:</dt>
        <dd class="col-md-2"><input class="form-control" id="dg_class" name="dg_class" aria-describedby="dg_class">
        </dd>
        <dt class="col-md-2">Packing group:</dt>
        <dd class="col-md-2"><input class="form-control" id="packing_group" name="packing_group" aria-describedby="packing_group"></dd>
        <dt class="col-md-2">Schedule:</dt>
        <dd class="col-md-2"><input class="form-control" id="schedule" name="schedule" aria-describedby="schedule"></dd>
    </dl>
    <button class="btn btn-primary btn-lg btn-block" id="submit">Save</button>
    <button class="btn btn-secondary btn-lg btn-block" id="cancel">Cancel</button>
</div>

<script src="/js/cas_autocomplete.js"></script>
<script>
$(document).ready(function () {
    $('#haz_classes').on('hide.bs.select', function () {
        $('#haz_class_categories').empty().show()
        for (i of $('#haz_classes').val()) {
            $.ajax({
                type: "GET",
                url: "/api/haz_class/id/" + i,
                data: {},
                dataType: "json",
                success: function (response) {
                    var selector = '<select class="form-control selectpicker" title="Category" id="haz_class_' + response['id'] + '"></select>'

                    $('#haz_class_categories').append('<dt class="col-md-2">' + response['description'] + '</dt>').append('<dd class="col-md-10">' + selector + '</dd>');

                    for (j of response['subclasses']) {
                        $('#haz_class_' + response['id']).append('<option value="' + j['id'] + '">' + j['description'] + '</option>');
                    }

                    $('#haz_class_' + response['id']).selectpicker('refresh');
                }
            });
        }
    });
});
</script>
<script>
$(document).ready(function () {
  $("#submit").click(function () {
    $('#haz_class_categories').append("<select multiple hidden name='haz_class_ids[]'></select>")
    for (i of $('#haz_classes').val()) {
        $("[name='haz_class_ids[]']").append("<option selected value=" + $('#haz_class_' + i).val() + ">item</option>")
    }
    $.ajax({
      type: "POST",
      url: "/api/container",
      data: {
        cas: $("[name='cas']").val(),
        name: $("[name='name']").val(),
        prefix: $("[name='prefix']").val(),
        barcode: $("[name='barcode']").val(),
        location_id: $("[name='location_id']").val(),
        supplier: $("[name='supplier']").val(),
        product_number: $("[name='product_number']").val(),
        lot_number: $("[name='lot_number']").val(),
        quantity: $("[name='quantity']").val(),
        owner_id: $("[name='owner_id']").val(),
        user: $("[name='user']").val(),
        inchi: $("[name='inchi']").val(),
        smiles: $("[name='smiles']").val(),
        pubchem: $("[name='pubchem']").val(),
        density: $("[name='density']").val(),
        melting_point: $("[name='melting_point']").val(),
        boiling_point: $("[name='boiling_point']").val(),
        haz_stats: $("[name='haz_stats[]']").val(),
        prec_stats: $("[name='prec_stats[]']").val(),
        pictogram_ids: $("[name='pictogram_ids[]']").val(),
        haz_class_ids: $("[name='haz_class_ids[]']").val(),
        category: $("[name='category']").val(),
        signal_word: $("[name='signal_word']").val(),
        un_number: $("[name='un_number']").val(),
        un_proper_shipping_name: $("[name='un_proper_shipping_name']").val(),
        dg_class: $("[name='dg_class']").val(),
        packing_group: $("[name='packing_group']").val(),
        schedule: $("[name='schedule']").val()
      },
      dataType: "json",
      success: function () {window.location.href = "/";}
    });
  });
  $("#cancel").click(function () {window.location.href = "/";});
});
</script>