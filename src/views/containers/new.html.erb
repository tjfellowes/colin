<div class="jumbotron w-50" > 
<h1>Add chemical</h1>
  <form action="/api/container" method="POST"> 
    <div class="form-group">
      <input type="text" name="cas" placeholder="CAS" class="form-control"/>
    </div>
    <div class="form-group">
      <input type="text" name="barcode" placeholder="Barcode" class="form-control"/>
    </div>
    <div class="form-group">
        <div class="input-group">
            <input type="text" class="form-control w-25" name="prefix" placeholder="Prefix">
            <input type="text" class="form-control w-75" name="name" placeholder="Name">
        </div>
    </div>
    <div class="form-group">
      <input type="text" name="location" placeholder="Location" class="form-control"/>
    </div>
    <div class="form-group">
        <div class="input-group">
            <input type="text" class="form-control w-75" name="container_size" placeholder="Quantity">
            <input type="text" class="form-control w-25" name="size_unit" placeholder="Unit">
        </div>
    </div>
    <div class="form-group">
      <input type="text" name="supplier" placeholder="Supplier" class="form-control"/>
    </div>
    <div class="form-group">
    <input class="form-check-input" type="checkbox" value="true" name ="haz_substance" id="haz_substance">
    <label class="form-check-label" for="haz_substance">
      Hazardous substance?
    </label>
    </div>
    <button type="submit" class="btn btn-primary">Create Chemical</button> 
  </form><br>
</div>